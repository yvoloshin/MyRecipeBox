<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Enter Your Recipe Details</h1>
  <%= simple_form_for @recipe do |f| %>
    <%= f.input :name, placeholder: 'What do you want to call your dish?' %>
    <%= f.input :description, placeholder: 'What do you like about this dish?' %>
    <%= f.input :ingredients, placeholder: 'List all ingredients and units of measurement' %>
    <%= f.input :instructions, placeholder: 'Enter preparation instructions. Press "enter" to separate individual steps.' %>
    <%= f.submit 'Create' %>
  <% end %>
</div>

