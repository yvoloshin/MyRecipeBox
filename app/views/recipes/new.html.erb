<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Enter Your Recipe Details</h1>
  <%= simple_form_for @recipe do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :ingredients %>
    <%= f.input :instructions %>
    <%= f.submit 'Create' %>
  <% end %>
</div>